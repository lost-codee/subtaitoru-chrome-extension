    "build": "webpack --config webpack/webpack.prod.js",
    "watch": "npm run prebuild && webpack --config webpack/webpack.dev.js --watch",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
