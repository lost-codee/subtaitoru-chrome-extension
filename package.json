{
  "name": "Subtaitoru",
  "version": "1.0.0",
  "description": "Learn japanese while watching your favorite movie/anime with this Chrome Extension",
  "main": "index.js",
  "scripts": {
    "build:shadow-css": "tailwindcss -i src/shadow-styles.css -o src/generated-shadow-styles.css --minify",
