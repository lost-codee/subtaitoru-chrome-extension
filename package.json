{
  "name": "Subtaitoru",
  "version": "1.0.0",
  "description": "Learn japanese while watching your favorite movie/anime with this Chrome Extension",
  "main": "index.js",
  "scripts": {
    "build:shadow-css": "tailwindcss -i src/styles/shadow-styles.css -o  src/styles/generated-shadow-styles.css --minify",
    "prebuild": "npm run build:shadow-css",
    "build": "npm run prebuild && webpack --config webpack.prod.js",
    "watch": "npm run prebuild && webpack --config webpack.dev.js --watch",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.0.2",
    "react-syntax-highlighter": "^15.5.0",
    "tiny-segmenter": "^0.2.0",
    "wanakana": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/chrome": "0.0.241",
    "@types/jest": "^27.0.2",
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.4",
    "@types/react-syntax-highlighter": "15.5.7",
    "@types/tiny-segmenter": "^0.2.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.1.0",
    "glob": "^7.1.6",
    "jest": "^27.2.1",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.4",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  }
