  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/tiny-segmenter": "^0.2.0",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^8.1.0",
    "glob": "^7.1.6",
    "jest": "^27.2.1",
    "mini-css-extract-plugin": "^2.9.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2 ",
